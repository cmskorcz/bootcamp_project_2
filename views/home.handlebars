  <section class="p-2">
        <div class="card text-center">
            <div class="card-header">
              Welcome to Event Buddy!
            </div>
            <div class="card-body">
              <h5 class="card-title">Get started today</h5>
              <p class="card-text">View and create local events with event buddy! Get started below.</p>
              <a href="/login" class="btn btn-primary">Log in</a>
              <a href="/signup" class="btn btn-primary">Create Account</a>
            </div>
          </div>
    </section>

    <h2 class="text-center">
      Current events
    </h2>

    <section class="d-flex justify-content-around flex-wrap p-2">
          <div class="card mb-3" style="width: 20rem;">
        <div class="card-body">
            <h3 class="card-title">{{name}}</h3>
            <p class="card-text">{{description}}</p>
        </div>
        <ul class="list-group list-group-flush">
            <li class="list-group-item"><strong>Address: </strong>{{address}}</li>
            <li class="list-group-item"><strong>Date: </strong>{{format_date date}}</li>
        </ul>
        {{#if Comments.length}}
        <ul class="list-group list-group-flush">
            {{#each Comments as |comment|}}
            {{> comment comment}}
            {{/each}}
        </ul>
        {{/if}}
        <div class="card-body">
            <a href="/events/{{id}}/edit" class="btn btn-primary">
                Edit Event
            </a>
        </div>
    </div>

    </section>
  </section>