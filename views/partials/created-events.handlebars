    <div class="card mb-3" style="width: 20rem;">
        <div class="card-body">
            <h3 class="card-title">{{name}}</h3>
            <p class="card-text">{{description}}</p>
        </div>
        <ul class="list-group list-group-flush">
            <li class="list-group-item"><strong>Address: </strong>{{address}}</li>
            <li class="list-group-item"><strong>Date: </strong>{{format_date date}}</li>
        </ul>
        {{#if Comments.length}}
        <ul class="list-group list-group-flush">
            {{#each Comments as |comment|}}
            {{> comment comment}}
            {{/each}}
        </ul>
        {{/if}}
        <div class="card-body">
            <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#editForm">
                Edit Event
            </button>
            <div class="modal fade" id="editForm" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="editFormLabel" aria-hidden="true">
                {{> edit-modal }}
            </div>
        </div>
    </div>
