<form id="edit-event-form">
    <div class="form-floating mb-3">
        <input type="text" class="form-control" id="eventNameEdit" placeholder="{{name}}">
        <label for="eventNameEdit">{{name}}</label>
    </div>
    <div class="form-floating mb-3">
        <input type="text" class="form-control" id="eventAddressEdit" placeholder="{{address}}">
        <label for="eventAddressEdit">{{address}}</label>
    </div>
    <div class="form-floating mb-3">
        <input type="date" class="form-control" id="eventDateEdit" placeholder="{{date}}">
        <label for="eventDateEdit">{{date}}</label>
    </div>
    <div class="form-floating mb-3">
        <textarea id="eventDescriptionEdit" class="form-control" placeholder="{{description}}"></textarea>
        <label for="eventDescriptionEdit">{{description}}</label>
    </div>
</form>